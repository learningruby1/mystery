.container
  .col-md-6
    %fieldset
      %legend
        Forgot your password?
        %span.spain ¿Olvidaste tu contraseña?

      = devise_error_messages!

      = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|
        .form-group
          = f.email_field :email, :autofocus => true, :placeholder => 'Email address / Correo Electrónico', :class => 'form-control'
        .form-group
          = f.submit "Send me reset password instructions / Send me reinicio instrucciones contraseña", :class => 'btn btn-default btn-block'
        .form-group
          = render "devise/shared/links"