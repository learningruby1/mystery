.container
  .col-md-6
    %fieldset
      %legend
        Sign in /
        %span.spain Iniciar sesión &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        - if devise_mapping.registerable? && controller_name != 'registrations'
          = link_to '<span class="prefix-style">Sign up </span><span class="spain">/ Contratar</span>'.html_safe, new_registration_path(resource_name)
          %br

      -#= render :partial => 'layouts/messages'

      = form_for resource, :as => resource_name, :url => session_path(resource_name), :class => 'form', :role => 'form' do |f|
        .form-group
          = f.email_field :email, :autofocus => true, :placeholder => 'Email address / Correo Electrónico', :class => 'form-control'
        .form-group
          = f.password_field :password, :placeholder => 'Password / Contraseña', :class => 'form-control'
        .form-group
          = f.submit 'SIGN IN / INICIAR SESIÓN', :class => 'btn btn-default btn-block'

        - if devise_mapping.rememberable?
          .form-group.checkbox
            %label
              = f.check_box :remember_me
              Remember me /
              %span.spain Acuérdate de mí

      - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
        = link_to "Forgot your password? /", new_password_path(resource_name)
        = link_to "¿Olvidaste tu contraseña?", new_password_path(resource_name), :class => 'spain'
        %br